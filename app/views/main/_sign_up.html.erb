<h1>Sign Up</h1>

<%= form_with model: @user, url: sign_up_path do |form| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <% @user.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
  <% end %>

  <div class="mb-3">
    <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
  </div>

  <div class="mb-3">
    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
  </div>

  <div class="mb-3">
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
  </div>

  <div class="mb-3">
    <%= form.submit class: "btn btn-warning fw-bold" %>
  </div>
<% end %>