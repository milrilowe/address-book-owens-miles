<div id="phone-number-card-<%= phone_number.id %>" class="card carousel-card">
  <div id="phone-number-card-body-<%= phone_number.id %>" class="card-body  carousel-card-body">
    <div class="edit-phone-number">
      <%= link_to "Edit", edit_person_phone_number_path(format: :js, person_id: @person.id, id: phone_number.id), remote: true %>
    </div>
    <div id="phone-entry-<%= phone_number.id %>" class="entry">
      <p><b class="fw-bold"><%= phone_number.phone_number %></b></p>
      <p><b class="fw-bold">Comment:</b>
          <% if phone_number.comment.strip.length > 0 %>
            <%= phone_number.comment %>
          <% else %>
            N/A
          <% end %>
      </p>
    </div>
  </div>
</div>